<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs442.sparameshwara.orderfood">

    <uses-sdk android:targetSdkVersion="23" android:minSdkVersion="23"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FoodMenuActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FoodDetailsPageActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".AmountCalculationActivity" android:configChanges="orientation|screenSize"
                  android:theme="@android:style/Theme.NoDisplay"/>

    </application>

</manifest>